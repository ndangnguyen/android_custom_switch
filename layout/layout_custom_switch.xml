<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flRoot"
    android:layout_width="90dp"
    android:layout_height="46dp">

    <View
        android:id="@+id/circle0"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="start|center"
        android:background="@drawable/transition_circle_0"
        android:elevation="3dp" />

    <View
        android:id="@+id/rectBody"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@drawable/transition_body"
        android:elevation="3dp" />

    <View
        android:id="@+id/circle1"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_gravity="start|center"
        android:layout_marginStart="6dp"
        android:background="@drawable/bg_circle_1"
        android:elevation="3dp" />

    <View
        android:id="@+id/circle2"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="start|center"
        android:layout_marginStart="16dp"
        android:background="@drawable/transition_circle_2"
        android:elevation="9dp" />


</FrameLayout>
